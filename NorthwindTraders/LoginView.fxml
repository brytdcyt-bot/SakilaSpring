<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pluralsight.NorthwindTradersAPI.ui.login.LoginController"
      alignment="CENTER"
      spacing="10"
      stylesheets="@login.css"
      styleClass="root">

    <VBox fx:id="card" spacing="12" alignment="CENTER" styleClass="card">

        <Label text="Northwind Traders" styleClass="title"/>

        <TextField fx:id="usernameField"
                   promptText="Username"
                   styleClass="input"/>

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       styleClass="input"/>

        <ComboBox fx:id="profileBox"
                  promptText="Environment"
                  styleClass="input"/>

        <Button fx:id="loginButton" text="Login" styleClass="login-btn"/>

    </VBox>

</VBox>
